<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_3sdp"
        app:cardElevation="@dimen/_2sdp">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:padding="@dimen/_5sdp">

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_referral_code"
                android:layout_marginStart="@dimen/_5sdp"
                android:orientation="horizontal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/image_referral_code"
                    android:layout_width="@dimen/_14sdp"
                    android:layout_height="@dimen/_14sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/ic_referral_code" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_referral_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:maxLines="1"
                    android:layout_gravity="center|start"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_12sdp"
                    app:layout_constraintBottom_toBottomOf="@id/image_referral_code"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/image_referral_code"
                    app:layout_constraintTop_toTopOf="@id/image_referral_code" />
            </LinearLayout>



            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_time_referral"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_referral_code"
                app:srcCompat="@drawable/ic_time_referral" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_time"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="@id/image_time_referral"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_time_referral"
                app:layout_constraintTop_toTopOf="@id/image_time_referral" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_phone_referral"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintStart_toStartOf="@id/image_time_referral"
                app:layout_constraintTop_toBottomOf="@id/image_time_referral"
                app:srcCompat="@drawable/ic_calling_referrall" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_phone_number"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="@id/image_phone_referral"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_phone_referral"
                app:layout_constraintTop_toTopOf="@id/image_phone_referral" />


            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_status_referral"
                android:layout_width="@dimen/_14sdp"
                android:layout_height="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_7sdp"
                app:layout_constraintStart_toStartOf="@id/image_phone_referral"
                app:layout_constraintTop_toBottomOf="@id/image_phone_referral"
                app:srcCompat="@drawable/ic_status_referral" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_status"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_10sdp"
                android:textColor="@color/colorBlack3"
                android:textSize="@dimen/_11sdp"
                app:layout_constraintBottom_toBottomOf="@id/image_status_referral"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/image_status_referral"
                app:layout_constraintTop_toTopOf="@id/image_status_referral" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</layout>