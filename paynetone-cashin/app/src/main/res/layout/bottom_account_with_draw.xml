<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:background="@drawable/bg_dialog_bottom_with_draw"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom">
        <TextView
            android:id="@+id/tv_title"
            android:textSize="@dimen/_13sdp"
            android:textStyle="bold"
            android:textColor="@color/colorBlack1"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="Tài khoản rút tiền"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/layout_with_draw_qr"
            android:layout_marginTop="@dimen/_20sdp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_tick_qr"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_tick"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@drawable/ic_han_muc"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:textSize="@dimen/_11sdp"
                android:layout_marginStart="@dimen/_20sdp"
                android:textColor="@color/colorBlack1"
                android:gravity="center"
                android:text="Tài khoản đã đối soát"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout_with_draw_gtgt"
            android:layout_marginTop="@dimen/_15sdp"
            app:layout_constraintTop_toBottomOf="@id/layout_with_draw_qr"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_tick_gtgt"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_gravity="center"
                android:background="@drawable/bg_circle_tick"
                android:layout_width="@dimen/_13sdp"
                android:layout_height="@dimen/_13sdp"/>
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_marginStart="@dimen/_20sdp"
                android:background="@drawable/ic_han_muc"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"/>
            <TextView
                android:textSize="@dimen/_11sdp"
                android:textColor="@color/colorBlack1"
                android:layout_marginStart="@dimen/_20sdp"
                android:text="Tài khoản hoa hồng đã đối soát"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"/>
        </LinearLayout>


        <View
            android:id="@+id/viewFooter"
            app:layout_constraintTop_toBottomOf="@id/layout_with_draw_gtgt"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_20sdp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>