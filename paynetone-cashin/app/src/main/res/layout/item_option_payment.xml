<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/rootView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_item_option_payment"
            android:padding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="@dimen/_32sdp"
                android:layout_height="@dimen/_32sdp"
                android:src="@drawable/ic_moca"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
            android:background="@drawable/bg_item_option_payment"
            android:id="@+id/viewDim"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:alpha="0.45"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/layout_logo"
            app:layout_constraintEnd_toEndOf="@id/layout_logo"
            app:layout_constraintStart_toStartOf="@id/layout_logo"
            app:layout_constraintTop_toTopOf="@id/layout_logo" />

        <TextView
            android:id="@+id/tvName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_3sdp"
            android:gravity="center"
            android:text="ShoppePay"
            android:textColor="#353434"
            android:textSize="@dimen/_10sdp"
            app:layout_constraintTop_toBottomOf="@id/layout_logo" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>